@model hrm_system.Models.Notice

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Notice Board
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index","Admin")">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="@Url.Action("Index","Notices")">Notice</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="@Url.Action("Create","Notices")">New Notice</a>
            </li>
        </ul>

    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->



            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-plus"></i>New Notice
                    </div>
                    <div class="tools">
                    </div>
                </div>

                <div class="portlet-body form">

                    <!-- BEGIN FORM-->
                    <form method="POST" action="@Url.Action("Create","Notices")" accept-charset="UTF-8" class="form-horizontal form-bordered">              


                        <div class="form-body">

                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    Title: <span class="required">
                                        *
                                    </span>
                                </label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="notice_title" placeholder="Title" value="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    Description: <span class="required">
                                        *
                                    </span>
                                </label>
                                <div class="col-md-6">
                                    <textarea class="form-control" name="notice_description"></textarea>

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    Create date: <span class="required">
                                        *
                                    </span>
                                </label>
                                <div class="col-md-6">
                                    <input type="date" class="form-control" name="notice_create_date"/>

                                </div>
                            </div>

                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">

                                        <button type="submit" data-loading-text="Submitting..." class="demo-loading-btn btn green">
                                            <i class="fa fa-plus"></i>	Submit
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->

                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->

        </div>
    </div>
    <!-- END PAGE CONTENT-->


