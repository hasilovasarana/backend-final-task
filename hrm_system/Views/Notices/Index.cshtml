@model IEnumerable<hrm_system.Models.Notice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Notice Board
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="~/Admin/Index">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Notice</a>
            <i class="fa "></i>
        </li>

    </ul>

</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row ">
    <div class="col-md-6">

        <a class="btn green" data-toggle="modal" href="~/Notices/Create">
            Add New Notice
            <i class="fa fa-plus"></i>
        </a>
    </div>
    <div class="col-md-6 form-group text-right">

        <span id="load_notification"></span>
        <input type="checkbox" onchange="ToggleEmailNotification('notice_notification');return false;" class="make-switch" name="notice_notification" checked data-on-color="success" data-on-text="Yes" data-off-text="No" data-off-color="danger">
        <strong>Email Notification</strong><br>


    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-12">


        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div id="load">


        </div>
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-clipboard"></i>Notice List
                </div>
                <div class="tools">
                </div>
            </div>

            <div class="portlet-body">


                <table class="table table-striped table-bordered table-hover" id="notices">
                    <thead>
                        <tr>
                            <th> ID </th>
                            <th> Title </th>
                            <th> Description </th>
                            <th> Status </th>
                            <th> Created on </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.notice_title</td>
                            <td>@item.notice_description</td>
                            <td>@item.notice_status_id</td>
                            <td>@item.notice_create_date</td>
                            <td>
                                <a href="~/Notices/Delete/@item.id">Delete</a> |
                                <a href="~/Notices/Edit/@item.id">Edit</a>
                            </td>
                            
                        </tr>

                        }
                        


                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->

    </div>
</div>
<!-- END PAGE CONTENT-->



