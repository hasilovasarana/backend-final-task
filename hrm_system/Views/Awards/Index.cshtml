@model IEnumerable<hrm_system.Models.Award>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    Awards
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="http://froiden.cloudapp.net/hrm_demo/admin/dashboard">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">awards</a>
            <i class="fa "></i>
        </li>

    </ul>

</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div id="load">


</div>
<div class="note note-warning"><strong>Disabled!</strong> Email function is disabled for <strong>Demo version</strong> </div>
<div class="row">
    <div class="col-md-6">

        <a class="btn green" data-toggle="modal" href="~/Awards/Create">
            Add New Award
            <i class="fa fa-plus"></i>
        </a>
    </div>
    <div class="col-md-6 form-group text-right">

        <span id="load_notification"></span>
        <input type="checkbox" onchange="ToggleEmailNotification('award_notification');return false;" class="make-switch" name="award_notification" data-on-color="success" data-on-text="Yes" data-off-text="No" data-off-color="danger">
        <strong>Email Notification</strong><br>


    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-12">

        <!-- BEGIN EXAMPLE TABLE PORTLET-->

        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-trophy"></i>awards List
                </div>
                <div class="tools">
                </div>
            </div>

            <div class="portlet-body">


                <table class="table table-striped table-bordered table-hover" id="awards">
                    <thead>
                        <tr>
                            <th> Hidden ID </th>
                            <th> EmployeeID </th>
                            <th> Awardee Name </th>
                            <th> Award </th>
                            <th> Gift </th>
                            <th> Hidden Month </th>
                            <th> For the Month </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.employee_id</td>
                            <td>@item.Employee.employee_full_name</td>
                            <td>@item.award</td>
                            <td>@item.gift </td>
                            <td>@item.month_id</td>                            
                            <td>
                            <a href="@Url.Action("Delete","Awards")/@item.id">Delete</a> |
                            <a href="@Url.Action("Edit","Awards")/@item.id">Edit</a>


                            </td>

                        </tr>
                        }
                        



                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->

    </div>
</div>
<!-- END PAGE CONTENT-->

